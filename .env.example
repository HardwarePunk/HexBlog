# Flask Configuration
SECRET_KEY=change-this-to-a-secure-secret
FLASK_ENV=development
FLASK_APP=app

# Database
DATABASE_URL=sqlite:///blog.db

# Security
SECURITY_PASSWORD_SALT=change-this-to-a-secure-salt
SECURITY_TWO_FACTOR_SECRET=change-this-to-a-secure-2fa-secret

# Mail settings (for password reset and 2FA)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Admin user (will be created on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-to-a-secure-password
